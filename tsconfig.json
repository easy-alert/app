{
  "extends": "expo/tsconfig.base",

  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "src/types/*"],
    "strict": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },

  "include": [
    "App.tsx",
    "src/**/*",
    ".eslintrc.js",
    "babel.config.js",
    "metro.config.js",
    "gesture-handler.js",
    "gesture-handler.native.js"
  ]
}
