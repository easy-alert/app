{
  "extends": "expo/tsconfig.base",

  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,

    "typeRoots": ["node_modules/@types", "src/types/*"],

    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@routes/*": ["src/routes/*"]
    }
  },

  "include": [
    "App.tsx",
    "src/**/*",
    ".eslintrc.js",
    "babel.config.js",
    "metro.config.js",
    "gesture-handler.js",
    "gesture-handler.native.js"
  ]
}
